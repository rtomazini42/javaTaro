<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="application.inicioController">
   <children>
      <ImageView disable="true" fitHeight="600.0" fitWidth="800.0" layoutX="-13.0" layoutY="-3.0" pickOnBounds="true" preserveRatio="true">
