         <effect>
            <DropShadow color="WHITE" height="71.41" radius="32.2375" spread="0.31" width="59.54" />
         </effect>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </ImageView>
   </children>
</AnchorPane>
