            <Font name="Times New Roman" size="17.0" />
         </font>
         <effect>
            <Bloom />
         </effect>
      </Text>
      <ImageView fx:id="logo" fitHeight="471.0" fitWidth="628.0" layoutX="153.0" layoutY="12.0" pickOnBounds="true" preserveRatio="true">
